<div class="card card-teaser card-teaser-image card-flex no-after rounded shadow-sm border border-light mb-0">
  <div class="card-image-wrapper with-read-more">
    <div class="card-body p-3">
      <div class="category-top">
        <a href="#" class="title-xsmall-semi-bold fw-semibold text-decoration-none">{{category}}</a>
      </div>
      <h4 class="card-title u-grey-light">
        <a href="#" class="text-decoration-none">{{title}}</a>
      </h4>
      <p class="text-paragraph-card u-grey-light m-0">{{description}}</p>
    </div>
    {{#if image}}
    <div class="card-image card-image-rounded">
      <img src="{{image}}" alt="Immagine di esempio" />
    </div>
    {{/if}}
  </div>
</div>